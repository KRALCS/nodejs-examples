<aside id="aside" class="col-md-4">

    <div class="widget">
        <div class="widget-search">
            <form action="/posts/search" method="GET">
            <input class="search-input form-control" name="search" type="text" placeholder="Search" value="{{query}}">
            <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
    </div>
    <!-- /Search -->

    <div class="widget">
        <h3 class="mb-3">Categories</h3>
        <div class="widget-category">
            {{#each categories}}
            <a href="/posts/category/{{this._id}}">{{this.name}}<span>({{this.num_of_posts}})</span></a>
            {{/each}}
        </div>
    </div>

    <!-- Posts sidebar -->
    <div class="widget">
        <h3 class="mb-3">Latest Posts</h3>

        {{#each (limit posts 2) }}
        <!-- single post -->
        <div class="widget-post">
            <a href="#">
                <img class="img-fluid" src="{{this.post_image}}" alt="">{{this.title}}
            </a>
            <ul class="blog-meta">
                <li>{{generateDate this.date 'MMM DD YYYY'}}</li>
            </ul>
        </div>
        <!-- /single post -->
        {{/each}}

    </div>
    <!-- /Posts sidebar -->
</aside>