
<!--==========================
    INSIDE HERO SECTION Section
============================-->	
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">EDIT POST</h1>
</section>
    
    <!--==========================
    Register Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">{{post.title}}</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/posts/edit/{{post._id}}?_method=PUT" method="POST" id="sentEditPost" name="sentEditPost" novalidate="novalidate" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
					<div class="row text-center">
						<div class="col-md-6 offset-3">
							<div class="form-group">
								<input class="form-control" name="title" type="text" value="{{post.title}}" placeholder="Title *" required="required" data-validation-required-message="Please enter title.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<select class="form-control" name="category">
									{{#each categories}}
										<option value="{{this._id}}" {{{setSelectedItem this._id ../post.category}}}>{{this.name}}</option>
									{{/each}}
								</select>
							</div>
                            <div class="form-group">
								<textarea class="form-control" name="content" rows="5" placeholder="Content *" required="required" data-validation-required-message="Please enter content.">{{post.content}}</textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="post_image" type="file" placeholder="Image *" required="required" data-validation-required-message="Please select file.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="btnEditPost" class="main-btn" type="submit">Update</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>